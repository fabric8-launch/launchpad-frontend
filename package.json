{
  "name": "launcher-frontend",
  "version": "2.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": ["packages/launcher-client", "packages/launcher-component", "packages/launcher-app", "packages/launcher-welcome-app"],
  "dependencies": {
    "@patternfly/react-core": "3.58.1",
    "@patternfly/react-icons": "3.10.6",
    "classnames": "2.2.6",
    "react": "16.9.0-alpha.0",
    "react-dom": "16.9.0-alpha.0"
  },
  "scripts": {
    "clean": "rm -rf build && find . -type d -name \"node_modules\" -exec rm -rf {} +",
    "test": "jest --silent -w=2",
    "test:verbose": "jest",
    "libs:build": "yarn client:build && yarn comp:build",
    "libs:publish": "lerna publish --conventional-commits --yes && yarn comp:storybook:publish",
    "build": "rm -rf build && yarn workspaces run build && cp -r ./packages/launcher-app/build ./build",
    "app:build:mock-api": "yarn workspace @launcher/app run build:mock-api",
    "app:start": "yarn workspace @launcher/app start:staging-api",
    "app:start:local-api": "yarn workspace @launcher/app start:local-api",
    "app:start:production-api": "yarn workspace @launcher/app start:production-api",
    "app:start:mock-api": "yarn workspace @launcher/app start:mock-api",
    "quarkus-app:start": "yarn workspace @launcher/quarkus-app start",
    "quarkus-app:build": "yarn workspace @launcher/quarkus-app build",
    "app:build": "yarn workspace @launcher/app build",
    "wa:start": "yarn workspace @launcher/welcome-app start",
    "wa:build": "yarn workspace @launcher/welcome-app build",
    "wa:build:mock-api": "yarn workspace @launcher/welcome-app build:mock-api",
    "wa:deploy": "yarn workspace @launcher/welcome-app image:deploy",
    "client:build": "yarn workspace @launcher/client build",
    "comp:build": "yarn workspace @launcher/component build",
    "comp:test": "yarn workspace @launcher/component test",
    "comp:storybook": "yarn workspace @launcher/component storybook",
    "comp:storybook:build": "yarn workspace @launcher/component storybook:build",
    "comp:storybook:publish": "yarn comp:storybook:build && yarn workspace @launcher/component storybook:publish"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/classnames": "2.2.7",
    "@types/jest": "24.0.15",
    "@types/lodash": "4.14.123",
    "@types/node": "11.13.4",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@testing-library/react": "8.0.4",
    "codecov": "3.5.0",
    "eslint": "5.16.0",
    "ghooks": "2.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "24.8.0",
    "jest-dom": "3.5.0",
    "lerna": "3.15.0",
    "node-sass": "4.12.0",
    "rollup": "1.16.6",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.1",
    "rollup-plugin-filesize": "6.1.1",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-postcss": "2.0.3",
    "rollup-plugin-tslint": "0.2.2",
    "rollup-plugin-typescript2": "0.21.2",
    "surge": "0.21.3",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-react": "4.0.0",
    "typescript": "3.4.3"
  }
}
